@model List<CodeThoughts.Model.Post>
@section featured {
	<header>
		<div class="page-header">
			<h1>Welcome <small>to codethoughts.co.uk</small></h1>
			<p class="lead">
				My name is James Foster. I'm a software developer. This will be my blog and I will attempt to chronicle
				the process of it's creation and evolution.
			</p>
		</div>
	</header>
}

<ol id="blog-container" class="unstyled">
	@foreach (var post in Model)
	{
		<li class="post">
			<h4>
				@if(!post.Published)
				{
					<span class="label label-warning">Unpublished</span>
				}
				
				<a href="@Url.Action("Details", "Post", new { id = post.Id })">@post.Title</a>
			</h4>

			@if(post.Published)
			{
				<small class="muted">
					Posted on @post.DateCreated.ToString("MMMM dd yyyy")
				</small>
			}

			<p class="content">
				@Html.Raw(post.ContentHTML)
			</p>
		</li>
	}
</ol>

