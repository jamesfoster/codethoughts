@model CodeThoughts.Model.Post

@{
	ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Update", "Post"))
{
	@Html.ValidationSummary(true)
	@Html.HttpMethodOverride(HttpVerbs.Put)

	<fieldset>
		<legend>Post</legend>

		<input type="hidden" name="Id" value="@Model.Id" />

		<div class="editor-label">
			@Html.LabelFor(model => model.Title)
		</div>
		<div class="editor-field">
			@Html.EditorFor(model => model.Title)
			@Html.ValidationMessageFor(model => model.Title)
		</div>

		<div class="editor-label">
			@Html.LabelFor(model => model.BlogId, "Blog")
		</div>
		<div class="editor-field">
			@ViewBag.Blog
		</div>

		<div class="editor-label">
			@Html.LabelFor(model => model.Published, "Published")
		</div>
		<div class="editor-field">
			@Html.CheckBoxFor(model=>model.Published)
			@Html.ValidationMessageFor(model => model.Published)
		</div>

		<div class="editor-label">
			@Html.LabelFor(model => model.Content)
		</div>
		<div class="editor-field">
			@Html.TextAreaFor(model => model.Content, 25, 10, new { @class = "post-editor" })
			@Html.ValidationMessageFor(model => model.Content)
		</div>

		<p>
			<input type="submit" value="Save" />
		</p>
	</fieldset>
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}